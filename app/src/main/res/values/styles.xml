<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorCalculator3</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/TextSize48</item>
    </style>

    <style name="OperationButton" parent="@style/NumberButton">
        <item name="android:background">@color/colorCalculator2</item>
    </style>

</resources>